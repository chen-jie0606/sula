{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "@sula/shared": ["./packages/shared/src/index.ts"],
      "@sula-form/core": ["./packages/form-core/src/index.ts"],
      "@sula-form/antd": ["./packages/form-antd/src/index.ts"],
      "@sula-form/fusion": ["./packages/form-fusion/src/index.ts"],
    }
  }
}
